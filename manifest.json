{
    "manifest_version": 2,
    "name": "Assignment 01 Plugin",
    "description": "some trials in coding for nmed 3720",
    "version": "1.0",
    "permissions": ["activeTab"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "allFrames": true,
            "js": ["/js/jquery.js", "/js/content.js"],
            "css": ["/css/style.css"]
       }
     ],
    "action": {
        "default_icon": {
            "64": "/images/icon1.png"
        },
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        "images/*.jpg",
        "images/*.png"
     ]
}
